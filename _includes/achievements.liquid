<div class="achievements">
  {% if site.achievements != blank %}
    {% assign achievements_size = site.achievements | size %}
    <div
      class="table-responsive"
      {% if page.achievements.scrollable and achievements_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign achievements = site.achievements | reverse %}
        {% if include.limit and page.achievements.limit %}
          {% assign achievements_limit = page.achievements.limit %}
        {% else %}
          {% assign achievements_limit = achievements_size %}
        {% endif %}
        {% for item in achievements limit: achievements_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="achievements-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No achievements so far...</p>
  {% endif %}
</div>
